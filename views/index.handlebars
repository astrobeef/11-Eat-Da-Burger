  burger name : {{burger_name}}
  <br>

  {{/if}}

  {{/each}}
</ul>


<ul>
  {{#each burgers}}

  {{#unless devoured}}
  burger name : {{burger_name}}
  <button class="devour-button" data-id="{{id}}">Devour it!</button>
  <br>
  {{/unless}}

  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="name">Burger Name:</label>
    <input type="text" id="name" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>